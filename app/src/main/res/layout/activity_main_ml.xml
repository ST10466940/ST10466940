<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/purple_200"
    tools:context=".MainActivity">

    <!-- App Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hera's Meal Suggester"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Time Input Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter time of day:"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/timeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Morning, Mid-morning, Afternoon, etc."
        android:inputType="text"
        android:textColor="@color/black"
        android:background="@drawable/edittext_background"/>

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/suggestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggest Meal"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/green"/>

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:backgroundTint="@color/red"/>
    </LinearLayout>

    <!-- Suggestion Output -->
    <TextView
        android:id="@+id/suggestionOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:padding="16dp"
        android:background="@drawable/suggestion_background"/>

    <!-- Fun Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bon appétit! 🍽️"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

</LinearLayout>